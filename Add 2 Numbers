<body>
 
 <h1> Add 2 Numbers </h1><br>

 <form>
  <label for="1num">First Number:</label><br>
  <input type="number" id="1num" onkeyup="computesum()"><br>
  <label for="2num">Second Number:</label><br>
  <input type="number" id="2num" onkeyup="computesum()"><br><br>
  

  <label for="sum"> Sum </label><br>
  <input id="sum" readonly type="number"><br><br>
  
   <a href="https://japhub-ict.w3spaces.com/index.html">Click To Go Back</a><br>

<br>

<script>
function computesum() {
    var num1, num2, sum;
    
    num1 = document.getElementById("1num").value * 1;
    num2 = document.getElementById("2num").value * 1;
  
    sum = num1 + num2;
    document.getElementById("sum").value = sum;
}
</script>
